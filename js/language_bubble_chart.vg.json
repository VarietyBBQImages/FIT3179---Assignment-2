{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 350,
  "title": "Number of Esablished Languges vs. Immigrant Languages per Country",
  "data": {
    "url": "data/Assignment 2 Data.csv"
  },
  "params": [
    {
      "name": "Speakers_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Number of Speakers: "
      }
    },
    {
      "name": "Speakers_Below",
      "value": 1500000000,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 1500000000,
        "step": 1000000,
        "name": "Maximum Number of Speakers: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    { "filter": "datum.Established > 0" },
    { "filter": "datum.Immigrant >= 0" },
    {
      "filter": "Speakers_Below > datum.TotalNumberSpeakers && datum.TotalNumberSpeakers > Speakers_Above"
    },
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {
      "calculate": "datum.TotalNumberSpeakers/datum.Count",
      "as": "Number of Speakers Split per Language"
    }
  ],
  "encoding": {
    "x": {
      "field": "Established",
      "type": "quantitative",
      "title": "Established Languages",
      "axis": { "tickCount": 7 },
      "scale": { "type": "log", "domain": [1, 1000] }
    },
    "y": {
      "field": "Immigrant",
      "type": "quantitative",
      "title": "Immigrant Languages",
      "axis": { "tickCount": 6 },
      "scale": { "type": "linear", "domain": [0, 150] }
    }
  },
  "layer": [
    {
      "params": [
        {
          "name": "grid",
          "select": "interval",
          "bind": "scales"
        }
      ],
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Count",
          "title": "Number of Languages",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [20, 50, 100, 250, 500],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": { "format": "," }
        },
        "fill": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#fbb4ae",
              "#b3cde3",
              "#ccebc5",
              "#decbe4",
              "#fed9a6",
              "#ffffcc"
            ]
          }
        },
        "stroke": { "value": "#111111" },
        "opacity": { "value": 0.75 },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          { "field": "Continent", "type": "nominal" },
          { "field": "Established", "type": "quantitative", "format": "," },
          { "field": "Immigrant", "type": "quantitative", "format": "," },
          {
            "field": "Count",
            "title": "Number of Languages",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "TotalNumberSpeakers",
            "title": "Total Number of Speakers",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "Number of Speakers Split per Language",
            "type": "quantitative",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "dy": -15,
        "fontSize": 11.5
      },
      "encoding": {
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": { "value": "black" },
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'Papua New Guinea' || datum['Country'] == 'Germany' || datum['Country'] == 'Iran' ||  datum['Country'] == 'United States of America'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}
